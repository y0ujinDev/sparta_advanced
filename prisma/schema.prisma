generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int        @id @default(autoincrement())
  email     String
  password  String
  name      String
  createdAt DateTime
  updatedAt DateTime
  products  Products[]

  @@map("Users")
}

model Products {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  status    String   @default("FOR_SALE")
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      Users    @relation(fields: [userId], references: [id])

  @@map("Products")
}
